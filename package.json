{
  "name": "family-travels-site",
  "version": "0.1.0",
  "private": true,
  "description": "Static travel map and album site",
  "scripts": {
    "start": "http-server -c-1 -p 4173 .",
    "lint": "npm run lint:js && npm run lint:css",
